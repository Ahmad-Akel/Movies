<Page x:ConnectionId='1'
    x:Class="Movies.Views.Movies"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:data="using:MoviesDataLayer.UWP.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="90"/>
        </Grid.RowDefinitions>
        <GridView x:ConnectionId='2'                                   IsItemClickEnabled="True"                                Margin="0,50,0,90" Grid.RowSpan="2" >
            <GridView.ItemTemplate>
                <DataTemplate                        >
                    <StackPanel x:ConnectionId='7' >
                        <Image x:ConnectionId='8'  Width="200"                        />
                        <TextBlock x:ConnectionId='9' FontSize="14"                       />
                    </StackPanel>

                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

        <TextBlock x:ConnectionId='3' Grid.Row="1"  Name="InfoTextBlock" FontSize="15" Foreground="Black"  FontWeight="bold"  Margin="0,20,0,0"/>
        <Button x:ConnectionId='4' x:Name="addtocard" Content="Add To Card" Foreground="Wheat" Margin="490,14,0,0" Grid.Row="1" VerticalAlignment="Top" Width="117"                        />
        <Button x:ConnectionId='5' x:Name="addtofavorite" Content="Add To Favorite" Foreground="Wheat" Margin="490,52,0,0" Grid.Row="1" VerticalAlignment="Top"                            />
        <TextBlock HorizontalAlignment="Left" Margin="-3,-1,0,0" Text="Movies" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="35" Height="40"/>
    </Grid>
</Page>

